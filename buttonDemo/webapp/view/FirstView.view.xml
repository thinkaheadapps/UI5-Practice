<mvc:View controllerName="demo.buttonDemo.controller.FirstView" xmlns:mvc="sap.ui.core.mvc" displayBlock="true" xmlns="sap.m">
	<Shell id="shell">
		<App id="app">
			<pages>
				<Page id="page" title="{i18n>title}">
					<content>
						<Button text="Save" press=".onSave" icon="sap-icon://save" type="Emphasized"/>
						<Button text="Info" press=".onInfo" tooltip="Click to get more info" type="Emphasized"/>
						<Button text="Wide Button" press=" .wideButtonPress" width="200px" type="Emphasized"/>
						<Button text="Disabled Button" press=".dissableButtonPress" width="200px" enabled="false" type="Emphasized"/>
						</content>
				</Page>
			</pages>
		</App>
	</Shell>
</mvc:View>